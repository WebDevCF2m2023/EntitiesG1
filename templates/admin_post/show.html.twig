{% extends 'template.back.html.twig' %}

{% block title %}{{ parent() }} | {{ title }} }}{% endblock %}
{% block header %}
    <h1>{{ title }}</h1>
    <p>{{ homepage_text }}</p>
{% endblock %}

{% block main %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>PostTitle</th>
                <td>{{ post.postTitle }}</td>
            </tr>
            <tr>
                <th>PostText</th>
                <td>{{ post.postText }}</td>
            </tr>
            <tr>
                <th>PostDateCreated</th>
                <td>{{ post.postDateCreated ? post.postDateCreated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PostDatePublished</th>
                <td>{{ post.postDatePublished ? post.postDatePublished|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PostIsPublished</th>
                <td>{{ post.postIsPublished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_index') }}">back to list</a>

    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('admin_post/_delete_form.html.twig') }}
{% endblock %}
