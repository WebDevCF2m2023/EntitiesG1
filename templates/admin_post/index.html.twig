{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PostTitle</th>
                <th>PostText</th>
                <th>PostDateCreated</th>
                <th>PostDatePublished</th>
                <th>PostIsPublished</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.postTitle }}</td>
                <td>{{ post.postText }}</td>
                <td>{{ post.postDateCreated ? post.postDateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.postDatePublished ? post.postDatePublished|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.postIsPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_post_new') }}">Create new</a>
{% endblock %}
